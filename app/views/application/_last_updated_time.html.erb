<div class="mt-2 d-flex align-items-center">
  <% if resource.last_updated_at.nil? %>
    <h6>Last Updated:</h6><h6><span class="ml-2 badge-warning badge">Unknown</span></h6>
  <% elsif (DateTime.now.utc - resource.last_updated_at)/60 > 10 %>
    <h6>Last Updated:</h6><h6><span class="ml-2 badge-danger badge"><%= time_ago_in_words(resource.last_updated_at) %> ago</span></h6>
  <% else %>
    <h6>Last Updated:</h6><h6><span class="ml-2 badge-success badge"><%= time_ago_in_words(resource.last_updated_at) %> ago</span></h6>
  <% end %>
</div>
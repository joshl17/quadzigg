<div class="border-0 mb-0 p-1 card">
  <div class="p-1 m-0 card-header">
    <div class="row">
      <div class="col-lg-1">
        <%= image_pack_tag image_path, height: 40, class: 'mr-2' %>
      </div>
      <div class="col-lg-7">
        <div class="row">
          <div class="col-lg-12">
            <div class="d-flex flex-row justify-content-start">
              <span class="text-truncate font-weight-bold"><%= resource_id %></span>
              <%= render partial: "last_updated_time_omnisearch", locals: { resource: resource } %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <%= render partial: "common_attributes", locals: { resource: resource } %>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="d-flex flex-row justify-content-start">
          <span class="flex-fill"></span>
          <a class="w-100 btn btn-primary" target="_blank" href="<%= console_link %>">Open in Console</a>
          <i data-toggle="collapse"  data-target="#collapse-<%= resource.id %>" data-expand-target="collapse-<%= resource.id %>" type="button" class="expandSearchResult ml-3 mr-1 align-self-center fa-2x fas fa-chevron-down"></i>
        </div>
      </div>
    </div>
  </div>
  <div id="collapse-<%= resource.id %>" class="collapse">
    <div class="card-body mt-0 mb-0"><pre class="mt-0 mb-0"><code><% serialized_obj = (entity.represent resource).serializable_hash %><%= JSON.pretty_generate(serialized_obj) %></code></pre>
    </div>
  </div>
</div>
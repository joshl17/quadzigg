<div class="card-header">
  <div class="no-gutters row">
    <div class="col-lg-10">
      <h4 class="card-title mb-0">
        <div class="text-truncate"><%= @conn.peering_id %></div>
        <a class="w-100 mt-2 btn btn-primary" target="_blank" href="<%= aws_console_link(:peering_conn, @conn.peering_id, @conn.region_code) %>">Open in AWS Console</a>
        <%= render partial: "last_updated_time", locals: { resource: @conn } %>
      </h4>
    </div>
    <%= render partial: "sidebar_resizers" %>
  </div>
</div>
<div class="card-body p-0">
  <div class="list-group list-group-flush">
    <div class="list-group-item">
      <div class="d-flex w-100 justify-content-between">
        <h5>Region</h5>
      </div>
      <p class="mb-0"><%= @conn.region_code %></p>
    </div>
    <div class="list-group-item">
      <div class="d-flex w-100 justify-content-between">
        <h5>Requester VPC ID</h5>
      </div>
      <%= clickable_aws_console_link(:vpc, @conn.requester_vpc.vpc_id, @conn.region_code) %>
    </div>
    <div class="list-group-item">
      <div class="d-flex w-100 justify-content-between">
        <h5>Accepter VPC ID</h5>
      </div>
      <%= clickable_aws_console_link(:vpc, @conn.accepter_vpc.vpc_id, @conn.region_code) %>
    </div>
    <%= render_annotation_for(@conn) %>
  </div>
</div>

